<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="screen"
    android:background="@color/background"
    tools:context="com.wafihasan.truthordare.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/enter_name"
        android:textColor="@color/text"
        android:layout_margin="8dp"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/editText"
        android:textColor="@color/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/play"
        android:layout_below="@+id/editText"
        android:layout_toStartOf="@+id/space"
        android:background="@android:color/transparent"
        android:text="Add"
        android:textColor="@color/text" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/space"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/play"
        android:layout_alignTop="@+id/add"
        android:layout_toEndOf="@+id/add"
        android:background="@android:color/transparent"
        android:text="Delete"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewdb"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:background="@android:color/transparent"
        android:text="@string/app_name"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/play"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/space"
        android:background="@android:color/transparent"
        android:text="Drop Database"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/viewdb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/drop"
        android:layout_alignBottom="@+id/drop"
        android:layout_alignStart="@+id/play"
        android:layout_toStartOf="@+id/space"
        android:background="@android:color/transparent"
        android:text="View Database"
        android:textColor="@color/text" />

</RelativeLayout>
